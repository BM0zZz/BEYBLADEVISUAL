<Page x:Class="BEYBLADE.Pages.DeleteBeyPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Borrar">

    <!-- === Recursos locales === -->
    <Page.Resources>
        <SolidColorBrush x:Key="Blue"   Color="#0AA1FF"/>
        <SolidColorBrush x:Key="Yellow" Color="#FFD23F"/>
        <SolidColorBrush x:Key="Card"   Color="#142138"/>
        <SolidColorBrush x:Key="BgTop"  Color="#0E182F"/>
        <SolidColorBrush x:Key="BgBot"  Color="#1B2E5A"/>

        <LinearGradientBrush x:Key="BgGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="{Binding Color, Source={StaticResource BgTop}}" Offset="0"/>
            <GradientStop Color="{Binding Color, Source={StaticResource BgBot}}" Offset="1"/>
        </LinearGradientBrush>

        <!-- Inputs -->
        <Style x:Key="FuturisticBox" TargetType="{x:Type Control}">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#1D2744"/>
            <Setter Property="BorderBrush" Value="{StaticResource Blue}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Botones neón -->
        <Style x:Key="NeonButtonBase" TargetType="Button">
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="12">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="4,2"/>
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="14" ShadowDepth="0" Opacity="0.85" Color="White"/>
                            </Border.Effect>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="NeonBlue" TargetType="Button" BasedOn="{StaticResource NeonButtonBase}">
            <Setter Property="Background" Value="{StaticResource Blue}"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style x:Key="NeonYellow" TargetType="Button" BasedOn="{StaticResource NeonButtonBase}">
            <Setter Property="Background" Value="{StaticResource Yellow}"/>
            <Setter Property="Foreground" Value="#0F1321"/>
        </Style>
    </Page.Resources>

    <!-- === Contenido === -->
    <Grid Background="{StaticResource BgGradient}">
        <Border Width="260" Height="340" CornerRadius="12"
                Background="{StaticResource Card}" Opacity="0.98"
                HorizontalAlignment="Center" VerticalAlignment="Center" Padding="12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="6"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="8"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Logo -->
                <Image Grid.Row="0" Source="/Images/beyblade-burst.png"
                       Height="60" HorizontalAlignment="Center"/>

                <!-- Título -->
                <TextBlock Grid.Row="2" Text="Borrar peonza"
                           Foreground="White" FontSize="18" FontWeight="Bold"
                           HorizontalAlignment="Center"/>

                <!-- Filtro -->
                <StackPanel Grid.Row="4" Width="220" HorizontalAlignment="Center">
                    <TextBlock Text="Filtrar por nombre:" Foreground="White"
                               FontSize="13" FontWeight="SemiBold" Margin="0,0,0,4"/>
                    <TextBox x:Name="txtFiltro" Style="{StaticResource FuturisticBox}"
                             TextChanged="Filtro_TextChanged"/>
                </StackPanel>

                <!-- Resultados -->
                <Border Grid.Row="6" CornerRadius="8" Background="#1F142138" Padding="6">
                    <ListBox x:Name="lstResultados"
                             Foreground="White"
                             BorderThickness="0"
                             SelectionMode="Single"
                             DisplayMemberPath="Name"/>
                </Border>

                <!-- Botones -->
                <StackPanel Grid.Row="8" Orientation="Horizontal"
                            HorizontalAlignment="Center">
                    <Button Content="Borrar" Style="{StaticResource NeonBlue}" Width="92"
                            Click="Borrar_Click" Margin="0,0,8,0"/>
                    <Button Content="Volver" Style="{StaticResource NeonYellow}" Width="92"
                            Click="Volver_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
