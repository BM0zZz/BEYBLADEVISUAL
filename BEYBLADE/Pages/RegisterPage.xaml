<Page x:Class="BEYBLADE.Pages.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Register">

    <!-- === PALETA Y ESTILOS (idénticos al Login) === -->
    <Page.Resources>
        <!-- Colores -->
        <SolidColorBrush x:Key="Blue"   Color="#0AA1FF"/>
        <SolidColorBrush x:Key="Yellow" Color="#FFD23F"/>
        <SolidColorBrush x:Key="Card"   Color="#142138"/>
        <SolidColorBrush x:Key="BgTop"  Color="#0E182F"/>
        <SolidColorBrush x:Key="BgBot"  Color="#1B2E5A"/>

        <!-- Fondo ventana -->
        <LinearGradientBrush x:Key="BgGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="{Binding Color, Source={StaticResource BgTop}}" Offset="0"/>
            <GradientStop Color="{Binding Color, Source={StaticResource BgBot}}" Offset="1"/>
        </LinearGradientBrush>

        <!-- Inputs -->
        <Style x:Key="FuturisticBox" TargetType="{x:Type Control}">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#1D2744"/>
            <Setter Property="BorderBrush"  Value="{StaticResource Blue}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Height" Value="32"/>
        </Style>

        <!-- Botón neón (base) -->
        <Style x:Key="NeonButtonBase" TargetType="Button">
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="12">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="8,4"/>
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="22" ShadowDepth="0" Opacity="0.9" Color="White"/>
                            </Border.Effect>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.92"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.82"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Botones neón -->
        <Style x:Key="NeonBlue" TargetType="Button" BasedOn="{StaticResource NeonButtonBase}">
            <Setter Property="Background" Value="{StaticResource Blue}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#550AA1FF" BlurRadius="24" ShadowDepth="0"/>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="NeonYellow" TargetType="Button" BasedOn="{StaticResource NeonButtonBase}">
            <Setter Property="Background" Value="{StaticResource Yellow}"/>
            <Setter Property="Foreground" Value="#0F1321"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#66FFD23F" BlurRadius="24" ShadowDepth="0"/>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="TertiaryButton" TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource Yellow}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{StaticResource Yellow}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="Height" Value="34"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="12">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,2"/>
                            <Border.Effect>
                                <DropShadowEffect Color="#55FFD23F" BlurRadius="16" ShadowDepth="0"/>
                            </Border.Effect>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.92"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.84"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Lema -->
        <Style x:Key="SloganText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Black"/>
            <Setter Property="Foreground">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#79C8FF" Offset="0"/>
                        <GradientStop Color="#FFD23F" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,8,0,14"/>
        </Style>

        <!-- Fondo decorativo del card -->
        <VisualBrush x:Key="DiagonalPattern" TileMode="Tile" Viewport="0,0,10,10" ViewportUnits="Absolute" Viewbox="0,0,10,10" ViewboxUnits="Absolute" Opacity="0.05">
            <VisualBrush.Visual>
                <Grid Width="10" Height="10">
                    <Rectangle Width="1.5" Height="14" Fill="White" RenderTransformOrigin="0.5,0.5">
                        <Rectangle.RenderTransform>
                            <TransformGroup>
                                <RotateTransform Angle="45"/>
                                <TranslateTransform X="6" Y="-2"/>
                            </TransformGroup>
                        </Rectangle.RenderTransform>
                    </Rectangle>
                </Grid>
            </VisualBrush.Visual>
        </VisualBrush>
        <RadialGradientBrush x:Key="SoftVignette" Center="0.5,0.5" RadiusX="0.9" RadiusY="0.9">
            <GradientStop Color="#00000000" Offset="0.55"/>
            <GradientStop Color="#88000000" Offset="1"/>
        </RadialGradientBrush>
    </Page.Resources>

    <!-- === CONTENIDO === -->
    <Grid Background="{StaticResource BgGradient}">
        <!-- +30px de alto para que respire -->
        <Border Width="320" Height="530" CornerRadius="18"
                HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.98"
                Background="{StaticResource Card}">
            <Border.Effect>
                <DropShadowEffect Color="#77000000" BlurRadius="30" ShadowDepth="0"/>
            </Border.Effect>

            <Grid ClipToBounds="True">
                <!-- Glows + textura -->
                <Ellipse Width="220" Height="220" Fill="{StaticResource Blue}" Opacity="0.18"
                         HorizontalAlignment="Left" VerticalAlignment="Top" Margin="-60,-60,0,0">
                    <Ellipse.Effect>
                        <BlurEffect Radius="40"/>
                    </Ellipse.Effect>
                </Ellipse>
                <Ellipse Width="260" Height="260" Fill="{StaticResource Yellow}" Opacity="0.12"
                         HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,-70,-70">
                    <Ellipse.Effect>
                        <BlurEffect Radius="50"/>
                    </Ellipse.Effect>
                </Ellipse>
                <Rectangle Fill="{StaticResource DiagonalPattern}" />
                <Rectangle Fill="{StaticResource SoftVignette}" />

                <!-- Layout con fila elástica para que los botones no se corten -->
                <Border Padding="18" Background="{x:Null}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <!-- logo -->
                            <RowDefinition Height="Auto"/>
                            <!-- lema -->
                            <RowDefinition Height="*"/>
                            <!-- form + checkbox (se adapta) -->
                            <RowDefinition Height="Auto"/>
                            <!-- botones principales -->
                            <RowDefinition Height="Auto"/>
                            <!-- botón limpiar -->
                        </Grid.RowDefinitions>

                        <!-- LOGO (ligeramente más compacto) -->
                        <Image Source="/Images/beyblade-burst.png"
                               Height="82" Stretch="Uniform" HorizontalAlignment="Center" Margin="0,0,0,4"/>

                        <!-- LEMA -->
                        <TextBlock Grid.Row="1" Text="¡Entrena, gira y gana!"
                                   Style="{StaticResource SloganText}" Margin="0,6,0,6"/>

                        <!-- FORM + CHECKBOX -->
                        <StackPanel Grid.Row="2">
                            <TextBlock Text="Nick de entrenador" Foreground="White" FontWeight="SemiBold"/>
                            <TextBox x:Name="txtNick" Width="276" Style="{StaticResource FuturisticBox}" />

                            <TextBlock Text="Correo electrónico" Margin="0,6,0,0" Foreground="White" FontWeight="SemiBold"/>
                            <TextBox x:Name="txtMail" Width="276" Style="{StaticResource FuturisticBox}" />

                            <TextBlock Text="Contraseña" Margin="0,6,0,0" Foreground="White" FontWeight="SemiBold"/>
                            <PasswordBox x:Name="txtPass" Width="276" Style="{StaticResource FuturisticBox}" />

                            <TextBlock Text="Confirmar contraseña" Margin="0,6,0,0" Foreground="White" FontWeight="SemiBold"/>
                            <PasswordBox x:Name="txtConfirm" Width="276" Style="{StaticResource FuturisticBox}" />

                            <CheckBox x:Name="chkTerms"
                                      Content="Acepto términos y condiciones"
                                      Foreground="{StaticResource Yellow}"
                                      FontWeight="SemiBold"
                                      Margin="0,20,0,0"/>
                        </StackPanel>

                        <!-- BOTONES PRINCIPALES (siempre visibles) -->
                        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,0">
                            <Button Content="Crear cuenta" Style="{StaticResource NeonYellow}" Margin="0,0,10,0" Click="CreateAccount_Click"/>
                            <Button Content="Iniciar sesión" Style="{StaticResource NeonBlue}" Click="GoLogin_Click"/>
                        </StackPanel>

                        <!-- BOTÓN LIMPIAR -->
                        <Button Grid.Row="4" Content="Limpiar campos"
                                Style="{StaticResource TertiaryButton}"
                                Margin="0,20,0,0"
                                Click="ClearForm_Click"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Page>
