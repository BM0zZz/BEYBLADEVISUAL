<Page x:Class="BEYBLADE.Pages.AddBeyPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Añadir" SnapsToDevicePixels="True" UseLayoutRounding="True">

    <Page.Resources>
        <SolidColorBrush x:Key="Blue"   Color="#0AA1FF"/>
        <SolidColorBrush x:Key="Yellow" Color="#FFD23F"/>
        <SolidColorBrush x:Key="Card"   Color="#142138"/>
        <SolidColorBrush x:Key="BgTop"  Color="#0E182F"/>
        <SolidColorBrush x:Key="BgBot"  Color="#1B2E5A"/>

        <LinearGradientBrush x:Key="BgGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="{Binding Color, Source={StaticResource BgTop}}" Offset="0"/>
            <GradientStop Color="{Binding Color, Source={StaticResource BgBot}}" Offset="1"/>
        </LinearGradientBrush>

        
        <Style x:Key="FuturisticBox" TargetType="{x:Type Control}">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#1D2744"/>
            <Setter Property="BorderBrush" Value="{StaticResource Blue}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        
        <Style x:Key="ComboReadable" TargetType="ComboBox" BasedOn="{StaticResource FuturisticBox}">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Background" Value="#E9EDF3"/>
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ComboBoxItem">
                        <Setter Property="Foreground" Value="Black"/>
                        <Setter Property="Background" Value="White"/>
                        <Setter Property="Padding" Value="6,4"/>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Botones -->
        <Style x:Key="NeonButtonBase" TargetType="Button">
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="12">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="4,2"/>
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="14" ShadowDepth="0" Opacity="0.85" Color="White"/>
                            </Border.Effect>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="NeonBlue" TargetType="Button" BasedOn="{StaticResource NeonButtonBase}">
            <Setter Property="Background" Value="{StaticResource Blue}"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style x:Key="NeonYellow" TargetType="Button" BasedOn="{StaticResource NeonButtonBase}">
            <Setter Property="Background" Value="{StaticResource Yellow}"/>
            <Setter Property="Foreground" Value="#0F1321"/>
        </Style>
    </Page.Resources>

    <Grid Background="{StaticResource BgGradient}">
        <Border Width="260" Height="320" CornerRadius="12"
                Background="{StaticResource Card}" Opacity="0.98"
                HorizontalAlignment="Center" VerticalAlignment="Center" Padding="12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="6"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="12"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Image Grid.Row="0" Source="/Images/beyblade-burst.png" Height="68" HorizontalAlignment="Center"/>
                <TextBlock Grid.Row="2" Text="Añadir peonza" Foreground="White" FontSize="18" FontWeight="Bold"
                           HorizontalAlignment="Center" Margin="0,0,0,6"/>

                <StackPanel Grid.Row="4" Width="220" HorizontalAlignment="Center">
                    <TextBlock Text="Nombre:" Foreground="White" FontSize="13" FontWeight="SemiBold"
                               HorizontalAlignment="Left" Margin="0,2,0,4"/>
                    <TextBox x:Name="txtNombre" Style="{StaticResource FuturisticBox}"/>

                    <Border Height="10" Background="Transparent"/>

                    <TextBlock Text="Tipo:" Foreground="White" FontSize="13" FontWeight="SemiBold"
                               HorizontalAlignment="Left" Margin="0,0,0,4"/>
                    <ComboBox x:Name="cmbTipo" Style="{StaticResource ComboReadable}">
                        <ComboBoxItem Content="Ataque"/>
                        <ComboBoxItem Content="Resistencia"/>
                        <ComboBoxItem Content="Equilibrio"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,6,0,0">
                    <Button Content="Guardar" Style="{StaticResource NeonYellow}" Width="92" Margin="0,0,8,0"
                            Click="Guardar_Click"/>
                    <Button Content="Volver"  Style="{StaticResource NeonBlue}" Width="92"
                            Click="Volver_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
