<Page x:Class="BEYBLADE.Pages.SearchBeyPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Buscar" SnapsToDevicePixels="True" UseLayoutRounding="True"
      Loaded="Page_Loaded">

    <Page.Resources>
        <SolidColorBrush x:Key="Blue"   Color="#0AA1FF"/>
        <SolidColorBrush x:Key="Yellow" Color="#FFD23F"/>
        <SolidColorBrush x:Key="Card"   Color="#142138"/>
        <SolidColorBrush x:Key="BgTop"  Color="#0E182F"/>
        <SolidColorBrush x:Key="BgBot"  Color="#1B2E5A"/>

        <LinearGradientBrush x:Key="BgGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="{Binding Color, Source={StaticResource BgTop}}" Offset="0"/>
            <GradientStop Color="{Binding Color, Source={StaticResource BgBot}}" Offset="1"/>
        </LinearGradientBrush>

        <Style x:Key="FuturisticBox" TargetType="{x:Type Control}">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#1D2744"/>
            <Setter Property="BorderBrush" Value="{StaticResource Blue}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="NeonButtonBase" TargetType="Button">
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="30"/>
        </Style>
        <Style x:Key="NeonYellow" TargetType="Button" BasedOn="{StaticResource NeonButtonBase}">
            <Setter Property="Background" Value="{StaticResource Yellow}"/>
            <Setter Property="Foreground" Value="#0F1321"/>
        </Style>

        <!-- selección legible sobre panel blanco -->
        <Style TargetType="ListBoxItem">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="4,2"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#FFD23F"/>
                    <Setter Property="Foreground" Value="#0F1321"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <DataTemplate x:Key="BeyItemTemplate">
            <StackPanel Orientation="Vertical" Margin="2">
                <TextBlock Text="{Binding Name}" FontWeight="SemiBold" Foreground="#111"/>
                <TextBlock Text="{Binding Type}"  FontSize="11" Foreground="#6A6F7A"/>
            </StackPanel>
        </DataTemplate>
    </Page.Resources>

    <Grid Background="{StaticResource BgGradient}">
        <Border Width="260" Height="350" CornerRadius="12"
                Background="{StaticResource Card}" Opacity="0.98"
                HorizontalAlignment="Center" VerticalAlignment="Center" Padding="12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Image Grid.Row="0" Source="/Images/beyblade-burst.png" Height="60" HorizontalAlignment="Center"/>

                <!-- ancho fijo 220 y centrado -->
                <StackPanel Grid.Row="1" Width="220" HorizontalAlignment="Center" Margin="0,10,0,10">
                    <TextBlock Text="Filtrar por nombre:" Foreground="White" FontSize="13" FontWeight="SemiBold"/>
                    <TextBox x:Name="txtFiltro" Style="{StaticResource FuturisticBox}" TextChanged="Filtro_TextChanged"/>
                </StackPanel>

                <!-- panel BLANCO centrado y con el MISMO ancho -->
                <Border Grid.Row="2" Width="220" HorizontalAlignment="Center"
                        CornerRadius="8" Background="White" Padding="6">
                    <ListBox x:Name="lstResultados"
                             Background="Transparent"
                             Foreground="Black"
                             BorderThickness="0"
                             ItemTemplate="{StaticResource BeyItemTemplate}"
                             SelectionMode="Single"/>
                </Border>

                <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,8,0,0">
                    <TextBlock x:Name="lblCount" Foreground="#CFE5FF" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <Button Content="Volver" Style="{StaticResource NeonYellow}" Width="92" Click="Volver_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
